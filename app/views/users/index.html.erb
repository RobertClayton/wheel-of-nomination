<%= render 'nav' %>

<h1>Listing Users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Score</th>
    <th>Team</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.score %></td>
      <td><%= user.team.id %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy',
                      user_path(user),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New User', new_user_path %>
