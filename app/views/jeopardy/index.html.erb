<%= render 'nav' %>

<div class="row" id="main-row" style="padding: 40px">

  <div class="col" id="main-cols">
    <div class="row" style="padding-top: 40px; padding-bottom: 40px;">
      <h1>Scoreboard</h1>
    </div>

    <div class="row" id="main-row" style="padding: 20px">

      <div class="col" id="main-cols">
        <div class="row" style="padding-left: 40px; padding-right: 40px; padding-bottom: 30px;">
          <ul>
            <% @scoreboard.each_with_index do |score, i| %>
              <ui><strong><%= "#{i + 1}: " %></strong><%= "$#{score.score} - #{score.name}" %></ui><br>
            <% end %>
          </ul>
        </div>
      </div>

    </div>
  </div>

  <div class="col" id="main-cols">
    <div class="row" style="padding-top: 40px; padding-bottom: 40px;">
      <h1>Jeopardy!!!</h1>
    </div>

    <div class="row" id="main-row" style="padding: 20px">

      <div class="col" id="main-cols">
        <div class="row" style="padding-left: 40px; padding-right: 40px; padding-bottom: 30px;">
          <h3>Category:</h3>
          <h3><%= @question[:category] %></h3>
        </div>

        <div class="row" style="padding-left: 40px; padding-right: 40px; padding-bottom: 30px;">
          <h2>Question:</h2>
          <h2><%= @question[:question] %></h2>
        </div>

        <div class="row" style="padding-left: 40px; padding-right: 40px; padding-bottom: 30px;">
          <h5><%= "Money: " + @question[:money] %></h5>
          <h5><%= "Episode #{@question[:episode]} - #{@question[:date]}" %></h5>
        </div>

        <div class="row" style="padding-left: 80px; padding-right: 80px;">
          <div class="row">
            <button type="button" id="btnJeopardyAnswer" class="btn btn-primary">
              Answer
            </button>
          </div>

          <div class="row" style="padding-left: 20px;">
            <div class="col" id="main-cols">
              <%= form_for @nominations, :url => new_scoreboard_path(@login), :html => {:method => :get} do %>
                <%= hidden_field_tag :user, @user.id %>
                <%= hidden_field_tag :money, @question[:money] %>
                <%= button_tag(type: "submit", :class => "btn btn-success") do %> Correct? <% end %>
              <% end %>
            </div>

            <div class="col" id="main-cols">
              <%= form_for @nominations, :url => nomination_index_path(@login), :html => {:method => :post} do %>
                <%= hidden_field_tag :user, @user.id %>
                <%= button_tag(type: "submit", :class => "btn btn-danger") do %> Nominated <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="row" style="padding-left: 40px; padding-right: 40px; padding-top: 40px;">
          <div class="row">
            <%= button_to "Wheel!",
                          { controller: "spins", action: "index" },
                          { class: 'btn btn-primary', method: :get } %>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col" id="main-cols">
    <div class="row" style="padding-top: 40px; padding-bottom: 40px;">
      <h1>Nominations</h1>
    </div>

    <div class="row" id="main-row" style="padding: 20px">
      <div class="col" id="main-cols">
        <div class="row" style="padding-left: 40px; padding-right: 40px; padding-bottom: 30px;">
          <ul>
            <% @nominations.each do |nomination| %>
              <ui><strong><%= "#{nomination.formatted_date}: " %></strong><%= "#{nomination.user&.name}" %></ui><br>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
